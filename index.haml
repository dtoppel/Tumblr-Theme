%html
  %head
    %meta{charset:"utf-8"}
    %meta{name:"viewport",content:"width=device-width,intial-scale=1.0"}
    %title {block:PostTitle}{PostTitle}: Welcome to my Blog!{/block:PostTitle}{Title}
    %link{rel:"stylesheet",href:"http://static.tumblr.com/xkbegps/mKRngdx94/screen.css"}
    %link{rel:"alternate",type:"application/rss+xml",href:"{RSS}"}
  %body
    %header
      %h1 {Title}
      %h2 {Description}
      
      .main
        {block:Posts}
        {block:Text}
        .post-text
          {block:Title}
          %h1 
            %a{href:"{Permalink}"} {Title}
          {/block:Title}
          .content
            {Body}
          .text-metadata
            %ul
              %li
                %a{href:"{Permalink}"} View Post {NoteCount} notes
                {LikeButton} {ReblogButton}
              {block:HasTags}
              %li Tagged
                %ul
                  {block:Tags}
                  %li
                    %a{href:"{TagURL}"} {Tag}
                  {/block:Tags}
              {/block:HasTags}
        {/block:Text}
        {block:Photo}
        .post-photo
          {block:Caption}
          %h1 
            %a{href:"{Permalink}"} {Caption}
          {/block:Caption}
          .content
            %img{src:"{PhotoURL-500}", alt:"{PhotoAlt}"} {LinkCloseTag} {block:HighRes}
              %a{href:"{PhotoURL-HighRes}"} %pView in High-Res
              {/block:HighRes}
            {block:Exif}
            {Caption}
          .photo-metadata
            %ul
              %li
                %a{href:"{Permalink}"} View Post {NoteCount} notes
                {LikeButton} {ReblogButton}
              {block:HasTags}
              %li Tagged
                %ul
                  {block:Tags}
                  %li
                    %a{href:"{TagURL}"} {Tag}
                  {/block:Tags}
              {/block:HasTags}
        {/block:Photo}
        {/block:Posts}
    
    
    %footer
      %p Get the
        %a{href:"{RSS}"} feed for this blog
    
    
    
